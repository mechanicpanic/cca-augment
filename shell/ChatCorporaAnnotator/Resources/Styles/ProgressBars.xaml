<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ProgressBar" x:Key="CircleProgressBar">
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Template" Value="{DynamicResource CircleProgressBarTemplate}"/>

        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#5FC2FDC2" Offset="0"/>
                    <GradientStop Color="#5F7CE07C" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>